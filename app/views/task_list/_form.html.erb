<%= form_with model: @task do |f| %>

  <p>
	<%= f.label :name %>:
	<%= f.text_field :name %>
  </p>

<p>
	<%= f.label :description %>:
	<%= f.text_field :description %>
</p>


<p>
  <%= f.label :completion_date %>:
  <%= f.text_field :completion_date %>
</p>


<p>
<%= f.submit action_type %>
</p>

<% end %>
