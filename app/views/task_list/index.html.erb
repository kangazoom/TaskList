<header>
  <h1>TASKLIST</h1>
  <nav>
    <div>
      <%= link_to "Add Task", new_task_path %>
    </div>
    <div>
      <%= link_to "All Tasks", tasks_path %>
    </div>
    <div>
    </nav>
  </header>

  <% @task_list.each do |task| %>
  <h2>YOUR TASKS</h2>
  <div>

    <p>
      <%= task.id %>.   <%= link_to task.name, task_path(task.id)  %>
    </p>
    <p>
      <%= link_to "Mark Complete", complete_task_path(task.id), method: :patch %>
 |
      <%= link_to "Edit", edit_task_path(task.id)  %> |
      <%= link_to "Delete", task_path(task.id), method: :delete, data: { confirm: "Are you sure you want to delete task: #{task.name}?" } %>
    </p>


    <p>
      <!-- why does this work without .id and just task??? -->

    </p>
  </div>
  <% end %>
